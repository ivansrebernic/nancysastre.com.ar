<style>
  .slider {
    -webkit-appearance: none;
    appearance: none;
    background: transparent;
    cursor: pointer;
  }
  
  .slider::-webkit-slider-track {
    background: #e5e7eb;
    height: 8px;
    border-radius: 4px;
  }
  
  .slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    background: #0186d6;
    height: 24px;
    width: 24px;
    border-radius: 50%;
    cursor: pointer;
    margin-top: -8px;
    box-shadow: 0 0 10px rgba(1, 134, 214, 0.5);
  }
  
  .slider::-moz-range-track {
    background: #e5e7eb;
    height: 8px;
    border-radius: 4px;
  }
  
  .slider::-moz-range-thumb {
    background: #0186d6;
    height: 24px;
    width: 24px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    box-shadow: 0 0 10px rgba(1, 134, 214, 0.5);
  }
</style>

<script>
  const salesSlider = document.getElementById('sales-slider') as HTMLInputElement;
  const teamSlider = document.getElementById('team-slider') as HTMLInputElement;
  const salesValue = document.getElementById('sales-value');
  const teamValue = document.getElementById('team-value');
  const incomeResult = document.getElementById('income-result');
  
  function formatNumber(num: number): string {
    return num.toLocaleString('es-AR');
  }
  
  function calculateIncome(): void {
    const sales = parseInt(salesSlider.value);
    const team = parseInt(teamSlider.value);
    
    // Commission calculation based on rank
    let commissionRate = 0.25;
    if (team >= 25) commissionRate = 0.40;
    else if (team >= 10) commissionRate = 0.35;
    else if (team >= 3) commissionRate = 0.30;
    
    const directCommission = sales * commissionRate;
    const teamBonus = team * 5000; // Average team member contribution
    const leadershipBonus = team >= 10 ? 15000 : team >= 3 ? 5000 : 0;
    
    const totalIncome = directCommission + teamBonus + leadershipBonus;
    
    if (salesValue) salesValue.textContent = formatNumber(sales);
    if (teamValue) teamValue.textContent = team.toString();
    if (incomeResult) incomeResult.textContent = formatNumber(Math.round(totalIncome));
  }
  
  salesSlider?.addEventListener('input', calculateIncome);
  teamSlider?.addEventListener('input', calculateIncome);
  
  // Initial calculation
  calculateIncome();
</script>