---
import { Image } from 'astro:assets';

export interface Props {
  image: ImageMetadata;
  category: string;
}

const { image, category } = Astro.props;
---

<div class={`gallery-item ${category} relative overflow-hidden rounded-lg group cursor-pointer card-3d`} data-category={category}>
  <a href={image.src} class="gallery-link block relative">
    <Image 
      src={image} 
      alt="Gallery image"
      width={400}
      height={300}
      loading="lazy"
      class="w-full h-64 object-cover transition-all duration-500 group-hover:scale-110 group-hover:brightness-110"
    />
    
    <!-- Multiple overlay effects -->
    <div class="absolute inset-0 bg-white/90 opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
    
    <!-- Icon and text overlay -->
    <div class="texts absolute inset-0 flex flex-col items-center justify-center">
      <span class="material-icons-outlined text-gray-900 text-5xl opacity-0 group-hover:opacity-100 transform scale-0 group-hover:scale-100 transition-all duration-500 mb-2">
        add_circle_outline
      </span>
      <span class="text-gray-900 text-sm font-scandia-medium uppercase tracking-wider opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500 delay-100">
        View Image
      </span>
    </div>
  </a>
</div>

<style>
  .gallery-item {
    margin-bottom: 20px;
  }
</style>