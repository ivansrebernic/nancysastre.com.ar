---
import { Image } from 'astro:assets';

export interface Props {
  image: ImageMetadata;
  name: string;
  role: string;
}

const { image, name, role } = Astro.props;
---

<div class="team-member group cursor-pointer card-3d">
  <div class="wrap-teamcontent text-center bg-white border border-gray-200 shadow-soft rounded-xl p-5 transition-all duration-300 hover:bg-white/80 backdrop-blur-sm border border-gray-100">
    <!-- Image wrapper -->
    <div class="pic-wrap relative overflow-hidden rounded-lg mb-4">
      <Image 
        src={image} 
        alt={name}
        width={300}
        height={320}
        loading="lazy"
        class="w-full h-80 object-cover transition-transform duration-500 group-hover:scale-110"
      />
      <!-- Overlay effects -->
      <div class="absolute inset-0 bg-gradient-to-t from-white/95 via-white/50 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"></div>
      
      <!-- Social icons (appear on hover) -->
      <div class="absolute bottom-4 left-0 right-0 flex justify-center gap-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
        <a href="#" class="w-10 h-10 bg-primary/80 hover:bg-primary rounded-full flex items-center justify-center transform hover:scale-110 transition-all duration-300">
          <i class="fab fa-facebook-f text-white"></i>
        </a>
        <a href="#" class="w-10 h-10 bg-primary/80 hover:bg-primary rounded-full flex items-center justify-center transform hover:scale-110 transition-all duration-300">
          <i class="fab fa-instagram text-white"></i>
        </a>
        <a href="#" class="w-10 h-10 bg-primary/80 hover:bg-primary rounded-full flex items-center justify-center transform hover:scale-110 transition-all duration-300">
          <i class="fab fa-twitter text-white"></i>
        </a>
      </div>
    </div>
    
    <!-- Name and role -->
    <div class="thename">
      <h3 class="text-xl font-scandia-medium mb-1 uppercase tracking-wider group-hover:text-gradient transition-all duration-300">
        {name}
      </h3>
      <p class="text-gray-600 text-sm uppercase tracking-wider group-hover:text-gray-700 transition-colors duration-300">{role}</p>
    </div>
  </div>
</div>

<style>
  .team-member {
    padding: 10px;
    perspective: 1000px;
  }
  
  .wrap-teamcontent {
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .team-member:hover .wrap-teamcontent {
    transform: rotateY(-5deg) rotateX(5deg) translateZ(20px);
  }
  
  .pic-wrap {
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
  }
  
  .team-member:hover .pic-wrap {
    box-shadow: 0 15px 40px rgba(1, 134, 214, 0.3);
  }
</style>