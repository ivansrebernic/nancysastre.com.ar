<style>
  .exit-intent-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(5px);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .exit-intent-overlay.show {
    display: flex;
    opacity: 1;
  }

  .exit-intent-popup {
    background: linear-gradient(135deg, #232442 0%, #1a1b3a 100%);
    border: 2px solid rgba(66, 217, 118, 0.3);
    border-radius: 20px;
    max-width: 500px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    animation: slideInBounce 0.5s ease;
  }

  @keyframes slideInBounce {
    0% {
      transform: translateY(-100px) scale(0.8);
      opacity: 0;
    }
    60% {
      transform: translateY(20px) scale(1.05);
    }
    100% {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  .close-button {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: #9ca3af;
  }

  .close-button:hover {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    transform: rotate(90deg);
  }

  .popup-content {
    padding: 40px 30px;
  }

  .popup-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .popup-emoji {
    font-size: 60px;
    display: block;
    margin-bottom: 15px;
    animation: bounce 1s infinite;
  }

  .popup-title {
    font-size: 28px;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 10px;
  }

  .popup-subtitle {
    font-size: 18px;
    color: #e5e7eb;
    margin-bottom: 25px;
    text-align: center;
  }

  .offer-box {
    background: rgba(66, 217, 118, 0.1);
    border: 2px solid rgba(66, 217, 118, 0.3);
    border-radius: 15px;
    padding: 20px;
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 25px;
  }

  .discount-badge {
    background: linear-gradient(135deg, #42d976, #3bc968);
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 5px 20px rgba(66, 217, 118, 0.5);
  }

  .discount-amount {
    font-size: 28px;
    font-weight: 900;
    color: #131429;
  }

  .discount-text {
    font-size: 14px;
    font-weight: 700;
    color: #131429;
  }

  .offer-title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 5px;
  }

  .offer-description {
    font-size: 14px;
    color: #9ca3af;
    margin-bottom: 8px;
  }

  .code {
    background: rgba(66, 217, 118, 0.2);
    padding: 4px 10px;
    border-radius: 6px;
    font-family: monospace;
    font-weight: 600;
    color: #42d976;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0 0 25px 0;
  }

  .benefits-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .email-capture {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }

  .email-input {
    flex: 1;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 12px 16px;
    color: white;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .email-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .email-input:focus {
    outline: none;
    border-color: #42d976;
    background: rgba(255, 255, 255, 0.15);
  }

  .submit-button {
    padding: 12px 24px;
    font-weight: 700;
    white-space: nowrap;
  }

  .alternative-cta {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .whatsapp-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #25D366;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .whatsapp-link:hover {
    transform: scale(1.05);
    color: #42d976;
  }

  @media (max-width: 768px) {
    .popup-content {
      padding: 30px 20px;
    }

    .popup-title {
      font-size: 22px;
    }

    .offer-box {
      flex-direction: column;
      text-align: center;
    }

    .email-capture {
      flex-direction: column;
    }

    .submit-button {
      width: 100%;
    }
  }
</style>

<script>
  let hasShown = false;
  const overlay = document.getElementById('exit-intent-overlay');
  const closeButton = document.querySelector('.close-button');
  const submitButton = document.querySelector('.submit-button');
  const emailInput = document.getElementById('exit-email') as HTMLInputElement;

  // Exit intent detection
  document.addEventListener('mouseout', (e) => {
    if (!hasShown && e.clientY <= 0 && overlay) {
      showPopup();
    }
  });

  // Mobile exit intent - detect scroll up at top of page
  let lastScrollTop = 0;
  window.addEventListener('scroll', () => {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    if (!hasShown && scrollTop < lastScrollTop && scrollTop < 100) {
      showPopup();
    }
    lastScrollTop = scrollTop;
  });

  // Show popup after 30 seconds if not shown
  setTimeout(() => {
    if (!hasShown) {
      showPopup();
    }
  }, 30000);

  function showPopup() {
    if (overlay && !hasShown) {
      overlay.classList.add('show');
      hasShown = true;
      
      // Save to session storage to not show again this session
      sessionStorage.setItem('exitIntentShown', 'true');
    }
  }

  function hidePopup() {
    if (overlay) {
      overlay.classList.remove('show');
    }
  }

  // Close button handler
  closeButton?.addEventListener('click', hidePopup);

  // Close on overlay click
  overlay?.addEventListener('click', (e) => {
    if (e.target === overlay) {
      hidePopup();
    }
  });

  // Submit handler
  submitButton?.addEventListener('click', () => {
    const email = emailInput?.value;
    if (email && email.includes('@')) {
      // Here you would normally send the email to your backend
      alert('¬°Gracias! Tu c√≥digo de descuento ha sido enviado a ' + email);
      hidePopup();
      
      // Optionally redirect to products
      setTimeout(() => {
        const productsSection = document.getElementById('products');
        if (productsSection) {
          productsSection.scrollIntoView({ behavior: 'smooth' });
        }
      }, 500);
    } else {
      emailInput?.focus();
      emailInput?.classList.add('shake');
      setTimeout(() => {
        emailInput?.classList.remove('shake');
      }, 500);
    }
  });

  // Check if already shown this session
  if (sessionStorage.getItem('exitIntentShown') === 'true') {
    hasShown = true;
  }
</script>

<style>
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-10px); }
    75% { transform: translateX(10px); }
  }
  
  .shake {
    animation: shake 0.5s ease;
  }
</style>