---
const indicators = [
  {
    icon: 'verified',
    text: 'Empresa verificada',
    color: 'text-primary'
  },
  {
    icon: 'security',
    text: 'Pago 100% seguro',
    color: 'text-primary'
  },
  {
    icon: 'local_shipping',
    text: 'Env√≠o asegurado',
    color: 'text-primary'
  }
];

---

<div class="trust-indicators">
  <!-- Inline Trust Badges -->
  <div class="indicators-row">
    <div class="flex flex-wrap justify-center gap-4 mb-6">
      {indicators.map((indicator, index) => (
        <div 
          class="indicator-item flex items-center gap-2 px-4 py-2 bg-gray-50 rounded-full animate-on-scroll fade-in"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <span class={`material-icons text-lg ${indicator.color}`}>
            {indicator.icon}
          </span>
          <span class="text-sm text-gray-700">{indicator.text}</span>
        </div>
      ))}
    </div>
  </div>


</div>

<style>
  .indicator-item {
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .indicator-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

</style>

