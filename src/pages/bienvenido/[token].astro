import { getContactByToken } from "../../lib/hubspot-api";

// Get token from URL
const { token } = Astro.params;

// Debug logging
console.log("[Bienvenido Page] Received token:", token);
console.log("[Bienvenido Page] Full URL:", Astro.url.toString());

// Validate token and get contact info
let contact = null;
let isValid = false;

if (token) {
    try {
        console.log(
            "[Bienvenido Page] Attempting to fetch contact with token:",
            token,
        );
        contact = await getContactByToken(token);
        console.log("[Bienvenido Page] Contact found:", contact ? "Yes" : "No");
        if (contact) {
            console.log("[Bienvenido Page] Contact details:", {
                firstName: contact.firstName,
                email: contact.email,
                hasToken: !!contact.onboardingToken,
            });
        }
        isValid = !!contact;
    } catch (error) {
        console.error("[Bienvenido Page] Error validating token:", error);
    }
} else {
    console.warn("[Bienvenido Page] No token provided in URL");
}

// If invalid token, return 404
if (!isValid) {
    console.error(
        "[Bienvenido Page] Invalid or missing token, redirecting to 404",
    );
    return Astro.redirect("/404");
}

